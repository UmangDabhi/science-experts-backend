# Database (Aurora Serverless)
DB_HOST=your-aurora-cluster.cluster-xxxxx.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_DATABASE=scienceexperts_db
DB_SSL=true

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=scienceexperts-uploads
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Lambda VPC Configuration
LAMBDA_SECURITY_GROUP_ID=sg-xxxxxxxxx
LAMBDA_SUBNET_ID_1=subnet-xxxxxxxxx
LAMBDA_SUBNET_ID_2=subnet-yyyyyyyyy

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this
JWT_EXPIRATION=7d

# Email Configuration (SES or SMTP)
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USER=your_ses_smtp_username
EMAIL_PASS=your_ses_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# Redis (ElastiCache - optional)
REDIS_HOST=your-redis.cache.amazonaws.com
REDIS_PORT=6379

# URLs
BACKEND_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod
FRONTEND_URL=https://your-cloudfront-domain.cloudfront.net

# Payment Gateway (if applicable)
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox
